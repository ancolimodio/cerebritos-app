{
  "name": "cerebritos-functions",
  "version": "1.0.0",
  "description": "Firebase Functions para Cerebritos",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "firebase-functions": "^4.5.0",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/node": "^18.19.0",
    "typescript": "^5.3.0"
  },
  "private": true
}
